#include<bits/stdc++.h>
using namespace std;
#define ll long long
ll fact[1001];
ll infact[1001];
const ll mod=1e9+7;
ll power(ll a,ll b)
{
    if(b==0)return 1;
    ll x=power(a,b/2);
    if(b%2)
    {
        return (x%mod * x%mod *a%mod)%mod;
    }
    else
   {
       return (x*x)%mod;
    }
}
    ll inverse(ll x)
    {
        return power(x,mod-2);
    }
    void factfill()
    {
        if(fact[1]==1) return ;
        fact[0]=1;
        infact[0]=1;
        for(int i = 1 ; i <= 1000 ;i++)
        {
            fact[i]=(i*fact[i-1])%mod;
            infact[i]=inverse(fact[i])%mod;
        }
    }
    
    ll nCr(int n, int r){
        // code here
        factfill();
        if(r>n) return 0;
        ll numerator=fact[n];
        ll denomiantor=(infact[r]*infact[n-r])%mod;
        return (numerator*denomiantor)%mod;
        //return ans;
    }
    int main()
    {
    	int n,r;
    	cin>>n>>r;
    	int a=nCr(n,r);
    	cout<<a;
    	
    }
